@model IEnumerable<EmployeeAppManagement.Models.EmployeeViewModel>

<div class="mt-5"></div>
<div class="card">
    <div class="card-header bg-primary text-white">
        <h2>Faculty Listing</h2>
    </div>
    <div class="card-body">
        <!-- Add Faculty Button -->
        <div class="btn-group my-3">
            <a id="createEditEmployeeModal" asp-action="AddFaculty" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Faculty
            </a>
        </div>

        <div class="mt-3"></div>

        <!-- Faculty Listing Table -->
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Photo</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.OfficePhone)</td>
                        <td><img src="@Html.DisplayFor(modelItem => item.PhotoURL)" class="img-thumbnail" alt="Photo"></td>
                        <td>
                            <a href="@Url.Action("Edit", "Employee", new { EmployeeID = item.EmployeeId, EmpCategory = "Faculty" })" class="btn btn-warning btn-sm mx-1">Edit</a> |
                            <a href="@Url.Action("DetailEmployee", "Employee", new { EmployeeID = item.EmployeeId, EmpCategory = "Faculty" })" class="btn btn-info btn-sm mx-1">Details</a> |
                            <a href="@Url.Action("Delete", "Employee", new { EmployeeID = item.EmployeeId, EmpCategory = "Faculty" })" class="btn btn-danger btn-sm mx-1">Delete</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>


